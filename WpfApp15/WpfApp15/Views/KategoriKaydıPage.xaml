<Page x:Class="WpfApp15.Views.KategoriKaydıPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp15.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KategoriKaydıPage">

    <Grid Background="White">

        <ScrollViewer>

            <StackPanel Margin="20" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Kategori Adı:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbKategoriAdı" Width="120" KeyDown="TbKategoriAdı_KeyDown"/>
                </StackPanel>

                <Button x:Name="BtnKaydet" Content="Kaydet" Width="80" Margin="5" Click="BtnKaydet_Click"/>

            </StackPanel>

        </ScrollViewer>

    </Grid>
</Page>
